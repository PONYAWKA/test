    $faq_duration = (сколько .*времен[иы] .*то|сколько занимает .*то|долго ли .*то)
    $faq_scope = (что входит .*то|состав работ .*то|план работ .*то)
    $sm_howareyou = (как дела|как поживаешь)
    $sm_positive = (хорошо|супер|здорово|отлично)
    $sm_negative = (плохо|хреново|неоч|не очень)
    $sm_name = (как тебя зовут|ты кто|кто ты)
    $sm_introduce = ((^|\b)а\s+я\b.*|^меня\s+зовут\b.*|^я\s+[^\s]+)
    $p_phone = ((\+?7|8)[\s\-]?\(?\d{3}\)?[\s\-]?\d{3}[\s\-]?\d{2}[\s\-]?\d{2}|\b\d{10,11}\b)
